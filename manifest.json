{
  "manifest_version": 3,
  "name": "Domain Age Checker",
  "version": "1.1",
  "description": "Chrome extension that checks the age of the currently active domain",
  "permissions": ["activeTab", "tabs"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}